#!/usr/bin/env bash

OUT="$HOME/.garden/weave/graph/graph.txt"
EDGES="$HOME/.garden/weave/graph/edges.txt"
WEIGHTS="$HOME/.garden/weave/graph/weights.txt"

{
  echo "Activity Graph"
  echo "=============="
  echo ""
  echo "Edges:"
  cat "$EDGES"
  echo ""
  echo "Weights:"
  cat "$WEIGHTS"
} > "$OUT"

echo "ðŸŒ¿ Activity graph generated."

echo ""
echo "Pulse:"
cat "$HOME/.garden/presence/pulse/current.txt"

echo ""
echo "Momentum (last 20 transitions):"
cat "$HOME/.garden/weave/graph/momentum.txt"
