#!/usr/bin/env bash

VIEW="$HOME/.garden/lantern/views/all.txt"

{
  echo "Garden Deep-Time Overview"
  echo "========================="
  echo ""

  echo "Cosmos:"
  cat "$HOME/.garden/presence/cosmos/cosmos.txt"
  echo "State:"
  cat "$HOME/.garden/presence/cosmos/state.txt"
  echo ""

  echo "Mythos:"
  cat "$HOME/.garden/presence/mythos/mythos.txt"
  echo "State:"
  cat "$HOME/.garden/presence/mythos/state.txt"
  echo ""

  echo "Aeon:"
  cat "$HOME/.garden/presence/aeon/aeon.txt"
  echo "State:"
  cat "$HOME/.garden/presence/aeon/state.txt"
  echo ""

  echo "Age:"
  cat "$HOME/.garden/presence/age/age.txt"
  echo "State:"
  cat "$HOME/.garden/presence/age/state.txt"
  echo ""

  echo "Era:"
  cat "$HOME/.garden/presence/era/era.txt"
  echo "State:"
  cat "$HOME/.garden/presence/era/state.txt"
  echo ""

  echo "Season:"
  cat "$HOME/.garden/presence/season/season.txt"
  echo "State:"
  cat "$HOME/.garden/presence/season/state.txt"
  echo ""

  echo "Cycle:"
  cat "$HOME/.garden/presence/cycle/phase.txt"
  echo "State:"
  cat "$HOME/.garden/presence/cycle/state.txt"
  echo ""

  echo "Rhythm:"
  cat "$HOME/.garden/presence/rhythm/beat.txt"
  echo "State:"
  cat "$HOME/.garden/presence/rhythm/state.txt"
  echo ""

  echo "Presence Loop:"
  cat "$HOME/.garden/presence/loop/state.txt"
  echo ""
} > "$VIEW"

garden page "All Cycles" "$VIEW"
