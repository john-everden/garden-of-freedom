#!/usr/bin/env bash

title="$1"
file="$2"

if [ -z "$title" ] || [ -z "$file" ]; then
  echo "Usage: garden page <title> <file>"
  exit 1
fi

if [ ! -f "$file" ]; then
  echo "Page source not found: $file"
  exit 1
fi

clear
echo "ðŸŒ¿ $title"
echo "----------------------------------------"
echo ""

cat "$file"

echo ""
echo "----------------------------------------"
read -p "Press ENTER to return..." _
clear

